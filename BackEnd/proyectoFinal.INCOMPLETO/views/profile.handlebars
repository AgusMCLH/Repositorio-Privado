<div class="pageLabel_container">
        <div class="pageLabel_wraper">
            <h1>
                User Profile
            </h1>
                <a href="/">Home</a><span>Profile</span>
        </div>
    </div>

<div class="profilePageWrap">
    <div class="mainInfo_container">
        <div class="avatarContainer">
            <div class="avatarDiv">
                <img src="/img/placeholder/avatar-placeholder.png" class="avatar" alt="avatar Placeholder">
                <div class="hoverEffect">
                    <div class="innerDiv">
                        <img src="/img/icon/subir.png" class="innerDiv_Image" alt="Upload Image">
                        <p>Subir imagen</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="userCredential_container">
            <div class="credential userID"><h3>User ID:</h3><p>{{user._id}}</p></div>
            <div class="credential"><h3>Nombre</h3><p>{{user.firstName}} {{user.lastName}}</p></div>
            <div class="credential"><h3>Correo</h3><p>{{user.email}}</p></div>
            <div class="credential"><h3>Rol</h3><p>{{user.role}}</p></div>
        </div>
    </div>
</div>






<form action="" method="post" enctype="multipart/form-data" id="IdentificationForm" user="{{user._id}}">
<input type="file" id="IdFrontField" accept='.png'>
<input type="file" id="IdBackField" accept='.png'>
<button type="submit" id="IdentificationSendButton">Enviar</button>
</form>

<h1>Comprobante de domicilio</h1>
<form action="" method="post" enctype="multipart/form-data" id="ResidenceForm" user="{{user._id}}">
<input type="file" id="ResidenceField" accept='.pdf'>
<button type="submit" id="ResidenceSendButton">Enviar</button>
</form>

<h1>Comprobante de estado de cuenta</h1>
<form action="" method="post" enctype="multipart/form-data" id="AccStatusForm" user="{{user._id}}">
<input type="file" id="AccStatusField" accept='.pdf'>
<button type="submit" id="AccStatusSendButton">Enviar</button>
</form>

<p>{{log user}}</p>


<script src="/js/documentsHandler.js"></script>